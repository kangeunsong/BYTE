<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:text="news_title"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/splashimg" />

    <TextView
        android:id="@+id/news_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="news_summary\n\n\n"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="원문보기"
        android:textSize="12dp" />

        <TextView
            android:id="@+id/news_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:text="news_link"
            android:gravity="center_vertical"
            android:background="@drawable/edittext_bg"
            android:drawableStart="@drawable/baseline_link_24"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="5dp"/>


        <ImageButton
        android:id="@+id/likebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_like_empty" />
</LinearLayout>
