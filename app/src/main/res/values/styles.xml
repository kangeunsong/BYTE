<resources>

    <style name="Widget.Theme.OPEN__SW.ActionBar.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.OPEN__SW.ButtonBar.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <!-- 기존 스타일을 오버라이드 -->
    <style name="MyBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <!-- BottomAppBar 배경 색상 변경 -->
        <item name="backgroundTint">@color/white</item>
        <!-- BottomAppBar 아이콘 색상 변경 -->
        <item name="actionMenuTextColor">@color/black</item>
        <!-- BottomAppBar 아이콘 및 텍스트 색상 변경 -->
        <item name="iconTint">@color/black</item>
        <item name="fabCradleMargin">16dp</item>
        <item name="fabCradleRoundedCornerRadius">8dp</item>
        <item name="fabCradleVerticalOffset">10dp</item>
        <!-- 추가적인 속성도 수정 가능 -->
    </style>
</resources>